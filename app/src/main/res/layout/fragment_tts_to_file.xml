<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_12adp"
    tools:context=".ui.tts.TtsToFileFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="#D5D5D5"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D5D5D5"
        android:hint="Enter same word"
        android:maxLines="1"
        android:paddingHorizontal="14dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/selected_type"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/covert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:paddingHorizontal="14dp"
        android:text="covert"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/file_conver_state"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginVertical="6dp"
        android:background="#D5D5D5"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:text="status : "
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="view"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/selected_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="#D5D5D5"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="play"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/convert_to_bytes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="WAV to Bytes"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/file_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="#D5D5D5"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="clear"
        android:textSize="14sp" />


</LinearLayout>